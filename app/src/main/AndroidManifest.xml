<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ganeshbhandarkar.uthfeed">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/uthfeed_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/uthfeed_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CompetitionDetail"></activity>
        <activity
            android:name=".Videos.FullScreenVideo"
            android:screenOrientation="landscape" />
        <activity android:name=".PostDetailActivity" />
        <activity android:name=".Compete.MoreWinnersActivity" />
        <activity android:name=".Compete.MoreCompetitionsActivity" />
        <activity android:name=".MainThreadActivities.ProfileActivity" />
        <activity android:name=".MainThreadActivities.OnBoardingActivity" />
        <activity
            android:name=".MainThreadActivities.GeneralLoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainThreadActivities.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainThreadActivities.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainThreadActivities.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainThreadActivities.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>