<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    android:padding="5dp"
    app:cardCornerRadius="4dp"
    android:id="@+id/winner_data"
    app:cardBackgroundColor="#212F3C">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/winner_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/winner_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/winner_image"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/winner_competition_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/winner_name"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            />



    </RelativeLayout>




</androidx.cardview.widget.CardView>