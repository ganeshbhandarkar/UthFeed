<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostDetailActivity"
    android:background="@android:color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:id="@+id/postDetailImage"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/background_detail"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/postDetailAuthorImage"
            android:layout_below="@id/postDetailImage"
            />

        <TextView
            android:id="@+id/postDetailTitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/postDetailImage"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="60dp"
            android:text="TITLE BY AUTHOR"
            android:gravity="left"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="25dp"
            android:textAlignment="center"
            android:fontFamily="@font/nasal"
            android:layout_centerVertical="true"/>

        <View
            android:id="@+id/view"
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/postDetailTitle"
            android:background="@android:color/darker_gray"
            android:layout_margin="3dp"
            />

        <TextView
            android:id="@+id/postAuthorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adma Eveas"
            android:layout_below="@id/view"
            android:textColor="@android:color/darker_gray"
            android:layout_marginLeft="130dp"
            />

        <TextView
            android:layout_below="@id/view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="| By "
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/postDetailDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 Jan 2019 |"
            android:layout_below="@id/view"
            android:textColor="@android:color/darker_gray"
            android:layout_marginLeft="10dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="30dp"
            android:layout_below="@id/postDetailDate"
            android:id="@+id/postDetailContent"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/aileronthin"/>

        <View
            android:id="@+id/view2"
            android:layout_width="200dp"
            android:layout_height="2dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/postDetailContent"
            android:background="@android:color/darker_gray"
            android:layout_margin="20dp"
            />

        <RelativeLayout
            android:id="@+id/relative_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view2"
            android:padding="10dp">



            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:id="@+id/userImage"
                />

                <EditText
                    android:id="@+id/postDetailComment"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="60dp"
                    android:background="@drawable/background_comment"
                    android:fontFamily="@font/nasal"
                    android:hint="Write Comment"
                    android:textSize="15dp"
                    android:layout_marginRight="90dp"
                    android:layout_centerVertical="true"
                    />

            <Button
                android:id="@+id/postDetailAddComment"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:text="ADD"
                android:textSize="16dp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_more"
                android:layout_centerVertical="true"/>



        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/relative_comment"
            android:id="@+id/commentsRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>




    </RelativeLayout>



</ScrollView>