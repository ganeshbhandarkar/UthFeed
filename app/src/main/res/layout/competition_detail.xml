<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompetitionDetail"
    android:background="@android:color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:id="@+id/competitionDetailImage"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/background_detail"/>

        <TextView
            android:id="@+id/competitionDetailTitle"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/competitionDetailImage"
            android:layout_alignParentEnd="true"
            android:text="TITLE BY AUTHOR"
            android:gravity="left"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="25dp"
            android:textAlignment="center"
            android:fontFamily="@font/nasal"
            android:layout_centerVertical="true"/>

        <View
            android:id="@+id/view"
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/competitionDetailTitle"
            android:background="@android:color/darker_gray"
            android:layout_margin="3dp"
            />

        <TextView
            android:id="@+id/competitionDetailDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 Jan 2019 "
            android:layout_below="@id/view"
            android:textColor="@android:color/darker_gray"
            android:layout_marginLeft="10dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="30dp"
            android:layout_below="@id/competitionDetailDate"
            android:id="@+id/competitionDetailContent"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/aileronthin"
            android:layout_marginBottom="20dp"/>

        <View
            android:id="@+id/view2"
            android:layout_width="200dp"
            android:layout_height="2dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/CompetitionRegisterButton"
            android:background="@android:color/darker_gray"
            android:layout_margin="20dp"
            />

        <Button
            android:id="@+id/CompetitionRegisterButton"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="REGISTER"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:fontFamily="@font/nasal"
            android:layout_centerHorizontal="true"
            android:background="@drawable/log_in_background"
            android:layout_below="@id/competitionDetailContent"/>

        <RelativeLayout
            android:id="@+id/relative_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view2"
            android:padding="10dp">



            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:id="@+id/userImage"
                />

            <EditText
                android:id="@+id/postDetailComment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="60dp"
                android:background="@drawable/background_comment"
                android:fontFamily="@font/nasal"
                android:hint="Say Something..."
                android:textSize="13dp"
                android:layout_marginRight="90dp"
                android:layout_centerVertical="true"
                />

            <Button
                android:id="@+id/postDetailAddComment"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:text="ADD"
                android:textSize="16dp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_more"
                android:layout_centerVertical="true"/>



        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/relative_comment"
            android:id="@+id/commentsRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>




    </RelativeLayout>



</ScrollView>